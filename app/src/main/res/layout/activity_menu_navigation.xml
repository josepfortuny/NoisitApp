<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MenuNavigationActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_menu_nav"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ToolbarColor"
        android:titleTextColor="@color/appSecondaryColor"
        android:titleMarginStart="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_menu_nav">
        <include layout="@layout/content_menu_navigation"/>
    </LinearLayout>

</RelativeLayout>